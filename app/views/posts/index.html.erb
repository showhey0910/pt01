<div class="post-container">
  <h2 class="heading">みんなに聞いてみる</h2>
  <%= render "post_form" %>
  <div class="sort-head">
    <h2 class="heading">みんなの質問</h2>
    <% if params[:sort] == "desc" || params[:sort] == nil %>
      <%= link_to "▼古い順に変更", root_path(sort: "asc"), class: "sort-txt" %>
    <% else %>
      <%= link_to "▼新しい順に変更", root_path, class: "sort-txt" %>
    <% end %>
  </div>
  <ul class="post-box">
    <% @posts.each do |post| %>
      <li class="post-li">
        <h3 class="post-title"><%= link_to post.title, post_path(post.id), class: "post-title-link" %></h3>
        <p class="post-content"><%= post.content %></p>
        <div class="post-content-bottom">
          <%= link_to "コメント: " + String(post.comments.count) + "件", post_path(post.id) + "#comment-index", class: "comment-num" %>
          <span class="comment-time"><%= simple_time(post.created_at) %></span>
        </div>
      </li>
    <% end %>
  </ul>
</div>
